#!/usr/bin/env ruby

$LOAD_PATH.push(File.expand_path(File.dirname(__FILE__) + '/../lib'))

require 'node2rpm-server'

server = Node2RPM::Server.new

case ARGV[0].sub('--', '')
when 'prep'
  server.prep
when 'mkdir'
  server.mkdir
when 'copy'
  server.copy
when 'build'
  server.build
when 'clean'
  server.clean
when 'filelist'
  server.filelist
end
