%define mod_name <%= spec.name %>
Name: <%= spec.name %>
Version:  <%= spec.version %>
Release:  0
License:  <%= spec.licenses %>
Summary:  <%= spec.summary %>
Url:  <%= spec.homepage %>
Group:  Development/Languages/NodeJS
<% i = 0 ; for s in spec.sources -%>
Source<%= i %>:	<%= s.url %>
<% i += 1 ; end -%>
BuildRequires:  fdupes
BuildRequires:  nodejs
BuildRequires:  nodejs-rpm-macros
Requires: nodejs
BuildRoot:  %{_tmppath}/%{name}-%{version}-build

%description
<%= spec.description %>

%prep
%nodejs_prep

%build
%nodejs_mkdir
%nodejs_copy
%nodejs_build
%nodejs_clean

%install
%nodejs_install
%nodejs_filelist

%fdupes %{buildroot}

%check
%nodejs_check

%files -f %{name}.list
%defattr(-,root,root)

%changelog
